<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_theme"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/instagram_font"
            android:text="Instagram"
            android:textColor="#FFF4FF"
            android:textSize="60dp" />

        <EditText
            android:id="@+id/edt_Username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_selector"
            android:hint="Username"
            android:paddingLeft="20dp"
            android:textColorHint="#CFA3DE" />
x
        <EditText
            android:id="@+id/edt_Passwork"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_selector"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:textColorHint="#CFA3DE" />

        <Button
            android:id="@+id/btn_Login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:textColor="#CEA2DD"
            android:text="Log in"
            android:background="@drawable/button_theme"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Forget your login details? Get help signing in"
            android:textColor="#FFF4FF"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="OR"
            android:textColor="#FFF4FF"
            android:textSize="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Log in with facebook"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/facebook"
            android:textColor="#FFF4FF"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>